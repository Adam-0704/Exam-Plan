@page
@model ExamPlan.Pages.CreateEmployeeModel
@{
    ViewData["Title"] = "Opret Medarbejder";
}



<h1>Opret Medarbejder</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
}

<form method="post">
    <div>
        <label>Navn:</label><br/>
        <input asp-for="CurrentPerson.Name" type="text" required />
    </div>

    <div>
        <label>Rolle:</label><br/>
        <select asp-for="CurrentPerson.Rolle" required>
            <option value="">-- Vælg Rolle --</option>
            @foreach (var role in Model.RoleOptions)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>

    <button type="submit">Opret Medarbejder</button>
</form>

<h2>Alle Medarbejdere</h2>

@if (Model.AllEmployees.Any())
{
     <div style="max-height:400px; overflow-y:auto;"> </div>
   <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
            <th></th>
        </tr>
        @foreach (var employee in Model.AllEmployees)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Rolle</td>
                <td>
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Er du sikker på, at du vil slette denne medarbejder?');">
                        <button type="submit" name="deleteId" value="@employee.Id">Slet</button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Medarbejder ikke fundet.</p>
}

