@page
@model ExamPlan.Pages.CreateEmployeeModel
@{
    ViewData["Title"] = "Create Employee";
}

<style>
    input, select { padding: 5px; margin: 5px 0; width: 300px; }
    button { padding: 8px 15px; margin-top: 10px; }
    table { margin-top: 20px; border: 1px solid #ccc; }
    th, td { padding: 8px; border: 1px solid #ccc; }
</style>

<h1>Create Employee</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
}

<form method="post">
    <div>
        <label>Navn:</label><br/>
        <input asp-for="NewPerson.Name" type="text" required />
    </div>

    <div>
        <label>Rolle:</label><br/>
        <select asp-for="NewPerson.Rolle" required>
            <option value="">-- VÃ¦lg Rolle --</option>
            @foreach (var role in Model.RoleOptions)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>

    <button type="submit">Opret Medarbejder</button>
</form>

<h2>Alle Medarbejdere</h2>

@if (Model.AllEmployees.Any())
{
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Role</th>
        </tr>
        @foreach (var employee in Model.AllEmployees)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Rolle</td>
            </tr>
        }
    </table>
}
else
{
    <p>Medarbejder ikke fundet.</p>
}

