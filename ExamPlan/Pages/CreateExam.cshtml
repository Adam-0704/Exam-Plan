@page
@model ExamPlan.Pages.CreateExamModel
@{
    ViewData["Title"] = "Opret Eksamen";
}



<h1>Opret Eksamen</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
}

<form method="post" class="form-container">
    <div class="form-group">
        <label>Navn:</label>
        <input asp-for="CurrentExam.Name" type="text" required />
    </div>
    <div class="form-group">
        <label>Type:</label>
        <select asp-for="CurrentExam.Type" required>
            <option value="">-- Vælg Type --</option>
            @foreach (var examType in Model.ExamTypeOptions)
            {
                <option value="@examType">@examType</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Eksamensdato:</label>
        <input asp-for="CurrentExam.ExamDate" type="datetime-local" required />
    </div>
    <div class="form-group">
        <label>Hold:</label>
        <select asp-for="CurrentExam.HoldId" required>
            <option value="">-- Vælg Hold --</option>
            @foreach (var hold in Model.AllHold)
            {
                <option value="@hold.Id">@hold.HoldId</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Personer:</label>
        <div class="scrollable-container-small">
            @if (Model.AllPersons.Any())
            {
                @foreach (var person in Model.AllPersons)
                {
                    <div>
                        <input type="checkbox" name="SelectedPersonIds" value="@person.Id" id="person_@person.Id" />
                        <label for="person_@person.Id">@person.Name (@person.Rolle)</label>
                    </div>
                }
            }
            else
            {
                <p>Ingen personer tilgængelige.</p>
            }
        </div>
    </div>
    <button type="submit">Opret Eksamen</button>
</form>

<h2>Alle Eksamener</h2>

@if (Model.AllExams.Any())
{
    <div class="scrollable-container">
        <table>
            <tr>
                <th>ID</th>
                <th>Navn</th>
                <th>Type</th>
                <th>Eksamensdato</th>
                <th>Hold ID</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var exam in Model.AllExams)
            {
                <tr>
                    <td>@exam.Id</td>
                    <td>@exam.Name</td>
                    <td>@exam.Type</td>
                    <td>@exam.ExamDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@exam.HoldId</td>
                    <td>
                        <a asp-page="/ExamDetails" asp-route-id="@exam.Id">
                            <button type="button">Detaljer</button>
                        </a>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Er du sikker på, at du vil slette denne eksamen?');">
                            <button type="submit" name="deleteId" value=@exam.Id class="btn-delete">Slet</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <p>Eksamen ikke fundet.</p>
}



