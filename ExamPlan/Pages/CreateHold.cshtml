@page
@model ExamPlan.Pages.CreateHoldModel
@{
    ViewData["Title"] = "Opret Hold";
}



<h1>Opret Hold</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
}

<form method="post">
    <div>
        <label>Hold ID:</label><br/>
        <input asp-for="CurrentHold.HoldId" type="text" required />
    </div>

    <button type="submit">Opret Hold</button>
</form>

<h2>Alle Hold</h2>

@if (Model.AllHold.Any())
{
    <div style="max-height:400px; overflow-y:auto;">
        <table>
            <tr>
                <th>ID</th>
                <th>Hold ID</th>
                <th></th>
            </tr>
            @foreach (var hold in Model.AllHold)
            {
                <tr>
                    <td>@hold.Id</td>
                    <td>@hold.HoldId</td>
                    <td style="text-align: right;">
                        <a href="/HoldDetails?id=@hold.Id">
                            <button type="button">Detaljer</button>
                        </a>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Er du sikker på, at du vil slette dette hold?');">
                            <button type="submit" name="deleteId" value="@hold.Id">Slet</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <p>Hold ikke fundet.</p>
}


