@page
@model ExamPlan.Pages.ExamDetailsModel
@{
    ViewData["Title"] = "Eksamen Detaljer";
}

<h1>Eksamen Detaljer</h1>

@if (Model.Exam != null)
{
    <div class="form-container">
        <form method="post" asp-page-handler="Update">
            <input type="hidden" asp-for="Exam.Id" />
            
            <div class="form-group">
                <label><strong>Navn:</strong></label>
                <input asp-for="Exam.Name" type="text" required />
            </div>
            
            <div class="form-group">
                <label><strong>Type:</strong></label>
                <select asp-for="Exam.Type" required>
                    <option value="">-- Vælg Type --</option>
                    @foreach (var examType in Model.ExamTypeOptions)
                    {
                        <option value="@examType">@examType</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <label><strong>Eksamensdato:</strong></label>
                <input asp-for="Exam.ExamDate" type="datetime-local" required />
            </div>
            
            <div class="form-group">
                <label><strong>Hold:</strong></label>
                <select asp-for="Exam.HoldId" required>
                    <option value="">-- Vælg Hold --</option>
                    @foreach (var hold in Model.AllHold)
                    {
                        <option value="@hold.Id">@hold.HoldId</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <strong>Antal Personer:</strong>
                <p>@(Model.Exam.Assignments?.Count ?? 0)</p>
            </div>
            
            <button type="submit">Gem Ændringer</button>
        </form>
        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Er du sikker på, at du vil slette denne eksamen?');">
            <input type="hidden" name="deleteId" value="@Model.Exam.Id" />
            <button type="submit" class="btn-delete">Slet</button>
        </form>
    </div>
    <p><a href="/CreateExam">Tilbage til Liste</a></p>
}
else
{
    <p>Eksamen ikke fundet.</p>
    <p><a href="/CreateExam">Tilbage til Liste</a></p>
}


