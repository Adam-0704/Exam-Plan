@page
@model ExamPlan.Pages.HoldDetailsModel
@{
    ViewData["Title"] = "Hold Detaljer";
}

<h1>Hold Detaljer</h1>

@if (Model.Hold != null)
{
    <div class="form-container">
        <form method="post" asp-page-handler="Update">
            <input type="hidden" asp-for="Hold.Id" />
            
            <div class="form-group">
                <label><strong>Hold ID:</strong></label>
                <input asp-for="Hold.HoldId" type="text" required />
            </div>
            
            <div class="form-group">
                <strong>Antal Eksamener:</strong>
                <p>@Model.Hold.Exams.Count</p>
            </div>
            
            <button type="submit">Gem Ændringer</button>
        </form>
        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Er du sikker på, at du vil slette dette hold?');">
            <input type="hidden" name="deleteId" value="@Model.Hold.Id" />
            <button type="submit" class="btn-delete">Slet</button>
        </form>
    </div>
    <p><a href="/CreateHold">Tilbage til Liste</a></p>
}
else
{
    <p>Hold ikke fundet.</p>
    <p><a href="/CreateHold">Tilbage til Liste</a></p>
}

